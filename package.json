{
  "name": "@metaquanta/tiling",
  "version": "0.0.1",
  "description": "render substitution tilings",
  "homepage": "https://tilings.metaquanta.com",
  "license": "AGPL-3.0",
  "repository": "github:metaquanta/tilings",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "assets": "copy-and-watch src/**/*.{html,css,svg} public",
    "assets:watch": "copy-and-watch --watch src/**/*.{html,css,svg} public",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write *",
    "serve": "es-dev-server --compatibility none --event-stream false --node-resolve --root-dir public/ --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "npm-run-all --parallel build:watch assets:watch serve"
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "copy-and-watch": "^0.1.5",
    "es-dev-server": "^1.57.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  }
}
